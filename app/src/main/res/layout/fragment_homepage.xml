<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".HomeScreen.HomepageFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/imsHomeBanner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="16:9"/>
            <LinearLayout
                android:id="@+id/BannerIndicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/imsHomeBanner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctr01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/imsHomeBanner"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtHomepageHead1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnViewNewProduct"
                    android:text="@string/home_title_sub_head1"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="22sp"
                    android:fontFamily="@font/inter_semibold"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>

                <Button
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:id="@+id/btnViewNewProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all_button_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@drawable/button_no_filled_text_color"
                    android:background="@drawable/button_small_text_state_background"
                    app:layout_constraintStart_toEndOf="@+id/txtHomepageHead1"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rccNewReleasedProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ctr01"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctr02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rccNewReleasedProduct"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtHomepageHead2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnViewAllSaleProduct"
                    android:text="@string/home_title_sub_head2"
                    android:textColor="@color/md_theme_error"
                    android:textSize="22sp"
                    android:fontFamily="@font/inter_semibold"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>
                <Button
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:id="@+id/btnViewAllSaleProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all_button_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@drawable/button_no_filled_text_color"
                    android:background="@drawable/button_small_text_state_background"
                    app:layout_constraintStart_toEndOf="@+id/txtHomepageHead2"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rccSaleProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ctr02"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frgProductOfWeek"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/rccSaleProducts">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="15dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imvBackGroundCard"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/img_6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/crdProductOfWeek"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/crdProductOfWeek"
                            android:src="@drawable/white_background_for_blur"
                            android:scaleType="centerCrop"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:foreground="@drawable/foreground_onclick_color_change"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/crdProductOfWeek"
                            android:layout_width="match_parent"
                            android:padding="20dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtProductOfWeekTitle"
                                android:text="@string/product_of_week_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:fontFamily="@font/inter_semibold"
                                android:textColor="@color/md_theme_onSurface"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtProductOfWeekTitle"
                                android:layout_width="match_parent"
                                android:layout_marginTop="20dp"
                                android:layout_height="wrap_content">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/crdProductImage"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="0dp">
                                    <ImageView
                                        android:id="@+id/imvProductImage"
                                        android:layout_width="100dp"
                                        android:src="@drawable/img_6"
                                        android:layout_height="100dp"
                                        android:scaleType="centerCrop"/>
                                </androidx.cardview.widget.CardView>
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/crdProductImage"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginStart="15dp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/txtProductName"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        android:layout_width="match_parent"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/inter_semibold"
                                        android:textSize="16sp"
                                        android:textColor="@color/md_theme_onSurface"
                                        android:layout_height="0dp"
                                        android:text="San Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGHSan Pham ABCDEFGH"/>
                                    <TextView
                                        android:id="@+id/txtProductPrice"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/txtProductName"
                                        android:layout_marginTop="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="360.000₫"
                                        android:fontFamily="@font/inter_semibold"
                                        android:textSize="20sp"
                                        android:textColor="@color/md_theme_error"/>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toEndOf="@+id/txtProductPrice"
                                        app:layout_constraintBottom_toBottomOf="@id/txtProductPrice"
                                        android:layout_marginStart="10dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="@color/md_theme_errorContainer"
                                        app:cardCornerRadius="10dp">
                                        <TextView
                                            android:id="@+id/txtSalePercent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="-25%"
                                            android:paddingRight="7.5dp"
                                            android:paddingLeft="7.5dp"
                                            android:paddingTop="2.5dp"
                                            android:paddingBottom="2.5dp"
                                            android:fontFamily="@font/inter_medium"
                                            android:textSize="15sp"
                                            android:textColor="@color/md_theme_error"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:id="@+id/txtProductArtist"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/txtProductPrice"
                                        android:layout_marginTop="10dp"
                                        android:text="Lana Del Rey"
                                        android:fontFamily="@font/inter"
                                        android:textColor="@color/md_theme_outline"
                                        android:textSize="17.5sp" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctr03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/frgProductOfWeek"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/txtHomepageHead3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnViewAllHotArtist"
                    android:text="@string/home_title_sub_head3"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="22sp"
                    android:fontFamily="@font/inter_semibold"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>

                <Button
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:id="@+id/btnViewAllHotArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all_button_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@drawable/button_no_filled_text_color"
                    android:background="@drawable/button_small_text_state_background"
                    app:layout_constraintStart_toEndOf="@+id/txtHomepageHead3"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rccHotArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ctr03"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txtHomepageHead4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rccHotArtist"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="25dp"
                android:text="@string/home_title_sub_head4"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="22sp"
                android:fontFamily="@font/inter_semibold"
                app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rccRecommendedProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txtHomepageHead4"
                android:layout_marginTop="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</FrameLayout>